@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private AuthenticationStateProvider AuthenticationStateProvider { get; set; } = default!;
    private bool IsUserLoggedIn { get; set; }
    public string goToPageLogin { get; set; } = string.Empty;
    public string goToPageRegister { get; set; } = string.Empty;

    public class FAQ
    {
        public string Question { get; set; } = string.Empty;
        public string Answer { get; set; } = string.Empty;
    }

    private List<FAQ> FAQs = new()
    {
        new FAQ { Question = "Como posso me registrar?", Answer = "Clique no botão 'Comece Agora' e siga as instruções." },
        new FAQ { Question = "Quais métodos de pagamento são aceitos?", Answer = "Aceitamos cartões de crédito, PayPal e transferência bancária." },
        new FAQ { Question = "Posso cancelar meu projeto?", Answer = "Sim, você pode cancelar seu projeto a qualquer momento antes do pagamento." },
        new FAQ { Question = "Como posso entrar em contato com o suporte?", Answer = "Nosso suporte está disponível 24/7 através do chat ao vivo." }
    };

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        IsUserLoggedIn = authState.User.Identity?.IsAuthenticated ?? false;
        if(IsUserLoggedIn){
            goToPageLogin = "/Home";
            goToPageRegister = "/Home";
        }else{
            goToPageLogin = "/Account/Login";
            goToPageRegister = "/Account/Register";
        }
    }
}
